{
  "name": "contrimon",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "@types/crypto-js": "^4.2.2",
    "wrangler": "^4.12.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "build-client": "bun build --target=browser --minify --outdir=dist/client --env=PUBLIC_* --chunk-naming=[name].[ext] index.html",
    "build-server": "bun build --target=node    --minify --outdir=dist/server ./server/index.ts",
    "dev": "bun --hot index.html",
    "serve": "bun --hot --port 4000 server"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "hono": "^4.7.6",
    "preact": "^10.26.5",
    "preact-router": "^4.1.2",
    "zod": "^3.24.3"
  }
}
